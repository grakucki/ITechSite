@model ITechSite.Models.ResourceListFind

@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(model => model.Find_Word, new { htmlAttributes = new { @class = "form-control" } })
        @Html.EditorFor(model => model.Find_Word, new { htmlAttributes = new { @class = "form-control" } })

        @Html.LabelFor(model => model.Find_WorkProcess, new { htmlAttributes = new { @class = "form-control" } })
        @{ var l = new SelectList(Model.WorkProcess, "Name", "Name"); }
        @Html.DropDownList("Find_WorkProcess", l, htmlAttributes: new { @class = "form-control" })

        @Html.LabelFor(model => model.Find_ResourceType, new { htmlAttributes = new { @class = "form-control" } })
        @{ var l2 = new SelectList(Model.ResourceType, "Type", "Type"); }
        @Html.DropDownList("Find_ResourceType", l2, htmlAttributes: new { @class = "form-control" })

        <input type="submit" name="Find.Action" value="find" class="btn btn-default" />
    </div>
}

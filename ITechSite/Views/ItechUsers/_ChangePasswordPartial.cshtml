
@model string    

<button type="button" data-toggle="modal" data-target="#myModal2" class="btn btn-success btn-block someclass">Ustaw nowe hasło</button>
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">


        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 style="color:green;"><span class="glyphicon glyphicon-log-in"></span> Zmiana hasła dla <b>@Model</b></h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="YourPass"><span class="glyphicon glyphicon-user"></span> Twoje hasło <i>( @Context.User.Identity.Name )</i></label>
                        <input type="password" class="form-control" id="usrname" placeholder="Twoje hasło">
                    </div>
                    <hr />
                    <div class="form-group">
                        <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Nowe hasło <i>( @Model )</i></label>
                        <input type="password" class="form-control" id="psw" placeholder="Nowe hasło">
                    </div>
                    <div class="form-group">
                        <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Powtórz nowe hasło</label>
                        <input type="password" class="form-control" id="psw2" placeholder="Powtórz nowe hasło">
                    </div>
                    <button type="submit" class="btn btn-default btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Zmień hasło</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
            </div>
        </div>
    



    </div>
</div>
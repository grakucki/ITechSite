@model IEnumerable<ITechSite.Models.InformationPlan>

@{
    ViewBag.Title = "Lista dokumentów";
}

<h2>Lista Dokumentów dla</h2>
<div>
    <h3>
        @if(Model!=null)
        { 
            if (Model.FirstOrDefault()!=null)
            {
                @Model.First().Resource.ResourceType.Type
                @Model.First().Resource.Name
            }
        }
</h3>
</div>

<table class="table">
    <tr>
        <th>
            Plik
        </th>
        <th>
            Kod dokumentu
        </th>
        <th>
            Opis
        </th>
        <th>
            Sortowanie
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dokument.FileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dokument.CodeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dokument.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.id })
        </td>
    </tr>
}

</table>
@Html.ActionLink("Dodaj kolejny dokument z biblioteki", "Create")
